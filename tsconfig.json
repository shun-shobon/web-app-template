{
	"extends": "@tsconfig/strictest/tsconfig.json",
	"include": ["./src", "./vite.config.ts"],
	"compilerOptions": {
		"types": ["vite/client"],
		"lib": ["esnext", "dom", "dom.iterable"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",

		"paths": {
			"~/*": ["./src/*"],
		},
	},
	"exclude": ["**/node_modules", "**/dist"],
}
